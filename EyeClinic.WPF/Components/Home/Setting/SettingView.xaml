<UserControl x:Class="EyeClinic.WPF.Components.Home.Setting.SettingView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             Style="{StaticResource LocalizationStyle}"
             xmlns:local="clr-namespace:EyeClinic.WPF.Components.Home.Setting"
             xmlns:lex="http://wpflocalizeextension.codeplex.com"
             d:DataContext="{d:DesignInstance local:SettingViewModel, IsDesignTimeCreatable=True}"
             mc:Ignorable="d"
             d:DesignHeight="650"
             d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width=".3*" />
            <ColumnDefinition Width=".7*" />
        </Grid.ColumnDefinitions>
        <ScrollViewer  Grid.Column="0">
            <DockPanel>
                <Border Background="Red"
                        CornerRadius="10"
                        DockPanel.Dock="Top"
                        Margin="0 8">
                    <Button Style="{StaticResource ButtonBase}" 
                            Background="Transparent"
                        Content="{lex:Loc Back}"                        
                        Command="{Binding BackHomeCommand}" />
                </Border>
                <Border Background="#005897"
                        CornerRadius="10"
                        DockPanel.Dock="Top"
                        Margin="0 8">
                    <Button Content="{lex:Loc AppSetting}"
                        Command="{Binding NavigateCommand}"
                            Background="Transparent"
                        CommandParameter="AppSetting"
                        DockPanel.Dock="Top"
                        VerticalAlignment="Top"
                        
                        Style="{StaticResource ButtonBase}" />
                </Border>
                <Border Background="#005897"
                        CornerRadius="10"
                        DockPanel.Dock="Top"
                        Margin="0 8">
                <Button Content="{lex:Loc Products}"
                            Command="{Binding NavigateCommand}"
                            Background="Transparent"
                            CommandParameter="Medicines"
                        DockPanel.Dock="Top"
                        VerticalAlignment="Top"
                        Style="{StaticResource ButtonBase}" />
                </Border>
                <Border Background="#005897"
                        CornerRadius="10"
                        DockPanel.Dock="Top"
                        Margin="0 8">
                    <Button Content="{lex:Loc ProductUnit}"
                            Background="Transparent"
