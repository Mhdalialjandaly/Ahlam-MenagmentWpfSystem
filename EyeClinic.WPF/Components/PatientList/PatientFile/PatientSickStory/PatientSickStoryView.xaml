                             AcceptsReturn="True"
                             x:Name="textBox"
                             FlowDirection="RightToLeft"
                             FontSize="22"                               
                             FontFamily="Times New Roman"
                             FontStretch="UltraExpanded"
                             BorderBrush="Black"
                             BorderThickness="3"
                             Background="#23D4F9"
                             FontWeight="Bold"
                             Padding="8"
                             Height="Auto"
                             Width="Auto"
                             MaxHeight="200"
                             VerticalContentAlignment="Top"
                             VerticalScrollBarVisibility="Visible" />
                </DockPanel>
                    <DockPanel 
                        Height="auto"
                           Grid.Row="1"
                           Margin="5">
                        <TextBlock Text="{lex:Loc SpecialNote}"
