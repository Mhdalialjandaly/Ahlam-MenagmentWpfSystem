                             FontStretch="UltraExpanded"
                             Padding="8"
                             BorderBrush="Black"
                             BorderThickness="3"
                             Background="#23D4F9"
                             FontWeight="Bold"
                             Height="Auto"
                             Width="Auto"
                                 MinHeight="150"
